include includes/header.pug

h2 #{title}

hr
<br>
.msg-bg
  .row
    .col-md-6
      form(action='add-articles' method='POST')
        .form-group
          label(for='username', class='control-label col-sm-2') You Name:
          input(type='text' name='username', class='form-control' )
        .form-group
          label(for='title', class='control-label col-sm-2') Title:
          input(type='text' name='title', class='form-control' )
        .form-group
          label(for='message', class='control-label col-sm-2') Message:
          textarea(name='message',  class='form-control', rows='3', placeholder='Enter your message')
        .form-group
          button(type='submit' class='btn btn-success') Submit

h2 Post from our users :
hr
ul
  each post, key in messages
    .row-post 
     
      li.list-group-item= username + ' ' + post.username 
       h4= post.title
       p= post.message
    <br>



include includes/footer.pug
